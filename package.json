{
	"name": "tsd",
	"version": "0.30.5",
	"description": "Check TypeScript type definitions",
	"license": "MIT",
	"repository": "tsdjs/tsd",
	"author": {
		"name": "Sam Verschueren",
		"email": "sam.verschueren@gmail.com",
		"url": "https://github.com/SamVerschueren"
	},
	"type": "module",
	"exports": {
		"types": "./dist/index.d.ts",
		"default": "./dist/index.js"
	},
	"bin": "./dist/cli.js",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"prepublishOnly": "npm run build",
		"test": "xo && tsc --project tsconfig.tsd.json --noEmit && ava",
		"build": "tsc --project tsconfig.build.json && chmod +x dist/cli.js && tsup"
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.d.ts",
		"!dist/test/**/*"
	],
	"keywords": [
		"typescript",
		"tsd",
		"check",
		"typings",
		"types",
		"typedefs",
		"typedefinitions"
	],
	"dependencies": {
		"@tsd/typescript": "~5.3.3",
		"eslint-formatter-pretty": "^6.0.1",
		"globby": "^14.0.1",
		"jest-diff": "^29.7.0",
		"meow": "^13.2.0",
		"p-map": "^7.0.1",
		"path-exists": "^5.0.0",
		"read-package-up": "^11.0.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^5.0.0",
		"@types/common-tags": "^1.8.4",
		"@types/node": "^18",
		"@types/react": "^18",
		"ava": "^6.1.1",
		"common-tags": "^1.8.2",
		"eslint": "^8.56.0",
		"execa": "^8.0.1",
		"react": "^16.9.0",
		"resolve-from": "^5.0.0",
		"rxjs": "^6.5.3",
		"tsimp": "^2.0.11",
		"tsup": "^8.0.2",
		"typescript": "~5.3.3",
		"xo": "^0.57.0"
	},
	"ava": {
		"timeout": "2m",
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--import=tsimp"
		],
		"environmentVariables": {
			"ESBK_TSCONFIG_PATH": "tsconfig.tsd.json"
		}
	},
	"xo": {
		"ignores": [
			"source/test/fixtures"
		],
		"parserOptions": {
			"project": "./tsconfig.tsd.json"
		},
		"rules": {
			"no-bitwise": "off",
			"unicorn/prevent-abbreviations": ["error", {
				"replacements": {
					"doc": false
				}
			}]
		}
	}
}
